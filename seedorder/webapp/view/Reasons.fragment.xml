		id="res"
		title="Reason"
		items="{/Items}"
		selectionChange="RequireReason"
		liveChange=".onValueHelpDialogSearchForReason"
		confirm=".onValueHelpDialogCloseForIDReason"
		cancel=".onValueHelpDialogCloseForIDReason">
		<StandardListItem
			title="{Reason}"
			 />
	</SelectDialog>
</core:FragmentDefinition>